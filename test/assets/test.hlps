Texture2D    all_textures[] : register(t0);
SamplerState all_samplers[] : register(s1);

struct Pixel_Input {
    float2 uv0   : TEXCOORD0;
    float2 uv1   : TEXCOORD1;
};

float4 main( Pixel_Input IN ) : SV_TARGET {

    Texture2D my_texture = all_textures[0];
    SamplerState my_sampler = all_samplers[0];

    float4 color = my_texture.Sample(my_sampler, IN.uv0, 0);
    // float4 color = float4(IN.uv0.x, IN.uv0.y, 0, 1);

    return color;
}